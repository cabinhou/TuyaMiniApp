     <!--Content Start-->
    <view class="item content">
      <image class="content_image"  src='/image/PowerOn.png' bind:sendDp="sendDp"></image>    

      <view class="header-dpValue-on" wx:if="{{titleItem.value}}">已开启</view>
      <view class="header-dpValue-off" wx:else >已关闭</view>

